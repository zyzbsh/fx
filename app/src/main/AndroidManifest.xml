            android:screenOrientation="portrait" />

        <activity
            android:name=".mine.AnnouncementDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mine.TradeHistoryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mine.TradeRulesActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mine.WithdrawActivity"
