<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/homepage_ad_im"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_ad" />

            <ImageButton
                android:id="@+id/homepage_close_ad_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:padding="10dp"
                android:src="@mipmap/icon_close" />

            <RelativeLayout
                android:id="@+id/homepage_title_profit_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/red_e63643"
                android:visibility="gone">

                <TextView
                    android:id="@+id/homepage_title_profit_list_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="列表"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/homepage_title_profit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="11111"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/homepage_title_profit_tv"
                    android:text="@string/account_unit"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/homepage_title_profit_tv"
                    android:text="@string/floating_proceed"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_33"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/homepage_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_money"
                android:drawablePadding="5dp"
                android:text="@string/account_balance"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/homepage_balance_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/homepage_balance_tv"
                android:textColor="@color/red_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/homepage_recharge_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/homepage_balance_amount_tv"
                android:background="@mipmap/bg_withdraw"
                android:gravity="center_horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="@string/recharge"
                android:textColor="@color/black_33"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/homepage_withdraw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/homepage_recharge_tv"
                android:background="@mipmap/bg_withdraw"
                android:gravity="center_horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="@string/withdraw"
                android:textColor="@color/black_33"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/homepage_cash_coupon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_crash"
                android:drawablePadding="3dp"
                android:text="@string/cash_coupon_num"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/shape_white_with_red_stroke"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/homepage_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#dcdddd"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_timeline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/time_line"
                    android:textColor="@drawable/sel_btn_data_line"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_kline5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/five_min"
                    android:textColor="@drawable/sel_btn_data_line"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_kline15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/ten_min"
                    android:textColor="@drawable/sel_btn_data_line"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_kline30"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/half_hour"
                    android:textColor="@drawable/sel_btn_data_line"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_kline60"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/one_hour"
                    android:textColor="@drawable/sel_btn_data_line"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/homepage_sys_announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_sys_announce"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#3e3a39"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <LinearLayout
                android:id="@+id/homepage_expect_raise_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_red_corner_5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_expect_raise"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">


                    <TextView
                        android:id="@+id/homepage_expect_raise_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_raise"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="@string/expect_raise"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/homepage_expect_raise_des_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@mipmap/bg_homepage_buy"
                    android:gravity="center"
                    android:text="@string/expect_raise_num"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/homepage_expect_fall_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@drawable/shape_green_corner_5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_expect_fall"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">


                    <TextView
                        android:id="@+id/homepage_expect_fall_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_raise"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="@string/expect_fall"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/homepage_expect_fall_des_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@mipmap/bg_homepage_buy"
                    android:gravity="center"
                    android:text="@string/expect_fall_num"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_hot"
                    android:drawablePadding="5dp"
                    android:text="@string/master_hot"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/homepage_master_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_more"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/more"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/homepage_master_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_master"
                android:padding="0.5dp">

                <ImageView
                    android:id="@+id/homepage_master_avatar_im"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/avatar_master" />

                <TextView
                    android:id="@+id/homepage_master_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/homepage_master_avatar_im"
                    android:text="NISHOLAS"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/homepage_master_money_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="@string/money_unit"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/homepage_master_profit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/homepage_master_money_unit_tv"
                    android:text="@string/profit_num"
                    android:textColor="@color/red_text"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
