<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_item_height">

    <fxtrader.com.app.view.CircleImageView
        android:id="@+id/find_item_win_stream_avatar_im"
        android:layout_width="@dimen/avatar_item_normal"
        android:layout_height="@dimen/avatar_item_normal"
        android:layout_centerVertical="true"
        android:src="@mipmap/avatar_item_normal"/>

    <ImageView
        android:id="@+id/find_item_win_stream_tag_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/find_item_win_stream_follow_tv"
        style="@style/FollowTv"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/find_item_win_stream_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/find_item_win_stream_follow_tv"
        android:layout_toRightOf="@id/find_item_win_stream_avatar_im"
        android:orientation="vertical">

        <TextView
            android:id="@+id/find_item_win_stream_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/find_item_win_stream_1_tv"
                style="@style/FindWinStreamFlagTv"
                android:text="@string/win"
                android:background="@drawable/shape_oval_red"/>

            <TextView
                android:id="@+id/find_item_win_stream_2_tv"
                style="@style/FindWinStreamFlagTv"
                android:text="@string/win"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape_oval_red"/>

            <TextView
                android:id="@+id/find_item_win_stream_3_tv"
                style="@style/FindWinStreamFlagTv"
                android:text="@string/win"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape_oval_red"/>

            <TextView
                android:id="@+id/find_item_win_stream_4_tv"
                style="@style/FindWinStreamFlagTv"
                android:text="@string/win"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape_oval_red"/>

            <TextView
                android:id="@+id/find_item_win_stream_5_tv"
                style="@style/FindWinStreamFlagTv"
                android:text="@string/win"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape_oval_red"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>