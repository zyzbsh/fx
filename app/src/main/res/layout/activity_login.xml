<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner_5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_text"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/login_account_edt"
            style="@style/NameEdt"
            android:paddingLeft="5dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_pwd_edt"
            style="@style/PwdEdt" />

        <Button
            android:id="@+id/login_btn"
            style="@style/LoginBtn"
            android:layout_marginTop="15dp"
            android:text="@string/sure" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#464646"
            android:layout_marginTop="10dp"
            android:text="温馨提示：为了您的账号安全，系统设定间隔6小时需重新输入密码"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/login_pwd_forgot_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/tip_forget_pwd"
                android:drawableLeft="@mipmap/icon_forget_pwd"
                android:textColor="#f2882a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/login_register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/tip_register"
                android:drawableLeft="@mipmap/icon_register"
                android:textColor="#f2882a"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>