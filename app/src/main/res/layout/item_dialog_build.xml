<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <RelativeLayout
        android:id="@+id/item_dialog_build_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4.5dp"
        android:background="@mipmap/bg_build_position_item_default">

        <TextView
            android:id="@+id/item_dialog_build_fee_tv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="1dp"
            android:background="@mipmap/bg_build_position_item_tv"
            android:gravity="center"
            android:text="@string/fee_num"
            android:textColor="@color/white"
            android:textSize="13.6sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_dialog_build_fee_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_dialog_build_spec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f6812e"
                android:textSize="13.6sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_dialog_build_margin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/red_text"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_dialog_build_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fee_unit"
                android:textColor="@color/red_text"
                android:textSize="13.6sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
