<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/shape_profit_list_item"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/item_pop_profit_list_profit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="+100"
        android:gravity="bottom"
        android:textColor="@color/red_text"
        android:textSize="14.7sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_pop_profit_list_profit_tv"
        android:layout_toRightOf="@id/item_pop_profit_list_profit_tv"
        android:layout_toLeftOf="@+id/item_pop_profit_list_close_position_tv"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pop_profit_list_stop_profit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f6812e"
            android:textSize="12sp"
            android:text="150%"
            android:background="@color/yellow_text"/>

        <TextView
            android:id="@+id/item_pop_profit_list_buy_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black_33"
            android:text="买入价：1928.0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_pop_profit_list_specification_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_33"
            android:text="6t"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_pop_profit_list_deal_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:layout_marginLeft="2dp"
            android:text="10 手"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_pop_profit_list_deal_direction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_33"
            android:text="买涨"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_pop_profit_list_close_position_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_profit_list_more"
        android:text="@string/close_position"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
