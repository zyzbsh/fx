<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/shape_profit_list_item"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/item_pop_profit_list_profit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="+100"
        android:gravity="bottom"
        android:textColor="@color/red_text"
        android:textSize="14.7sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_pop_profit_list_profit_tv"
        android:layout_toRightOf="@id/item_pop_profit_list_profit_tv"
        android:layout_toLeftOf="@+id/item_pop_profit_list_close_position_tv"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pop_profit_list_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="33333"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_pop_profit_list_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="22222"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_pop_profit_list_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="2dp"
            android:text="11111"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_pop_profit_list_close_position_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_profit_list_more"
        android:text="@string/close_position"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
