<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_profit_and_loss_set_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_33"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:textSize="14.6sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/view_profit_and_loss_set_minus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@mipmap/icon_minus" />

        <TextView
            android:id="@+id/dialog_build_set_percent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@mipmap/bg_set_text"
            android:gravity="center"
            android:textColor="@color/gray_6"
            android:textSize="14.6sp" />

        <ImageButton
            android:id="@+id/view_profit_and_loss_set_plus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@mipmap/icon_plus" />

    </LinearLayout>
</LinearLayout>
