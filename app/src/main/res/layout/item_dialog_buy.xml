<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_dialog_buy_item"
    android:layout_marginBottom="2.3dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_dialog_unit_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:textColor="@color/black_28"
        android:textSize="24.9sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_dialog_price_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/black_28"
            android:layout_height="wrap_content"
            android:textSize="20.3sp"/>

        <TextView
            android:id="@+id/item_dialog_fee_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fee_unit"
            android:textColor="@color/black_28"
            android:textSize="14.7sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_dialog_profit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_buy_profit_num"
            android:textColor="@color/black_28"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_dialog_fee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_buy_fee_num"
            android:textColor="@color/black_28"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
