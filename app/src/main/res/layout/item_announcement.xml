<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/shape_gray_item"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/item_announcement_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/item_announcement_see_tv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_announcement_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_6"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_announcement_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_6"
            android:textSize="14sp"
            android:text="@string/time_num"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_announcement_see_tv"
        android:layout_width="wrap_content"
        android:layout_height="30.5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_profit_list_more"
        android:gravity="center"
        android:text="@string/see"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_announcement_state_tv"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/item_announcement_see_tv"
        android:layout_alignBottom="@id/item_announcement_info_layout"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:layout_height="wrap_content" />
</RelativeLayout>
