<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/shape_dialog_build_position">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="设置止盈止损"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black_33"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_28"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="设置止盈/止损"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                style="@style/BuildPositionDialogTv"
                android:text="@string/stop_profit" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dialog_build_stop_profit_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dialog_buy_padding"
                android:paddingRight="@dimen/dialog_buy_padding" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="23.7dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                style="@style/BuildPositionDialogTv"
                android:text="@string/stop_loss" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dialog_build_stop_loss_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dialog_buy_padding"
                android:paddingRight="@dimen/dialog_buy_padding" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_buy_padding"
            android:layout_marginRight="@dimen/dialog_buy_padding"
            android:layout_marginTop="34dp"
            android:gravity="center_horizontal"
            android:text="@string/remind_build_position"
            android:textColor="@color/gray_9"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="56.5dp"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="9.6dp"
            android:paddingRight="9.6dp">

            <TextView
                android:id="@+id/dialog_build_sure_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_sure"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dialog_build_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cancel"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
