<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="25.5dp"
    android:paddingRight="25.5dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_item_layout"
        android:layout_width="match_parent"
        android:layout_height="28dp">

        <TextView
            android:id="@+id/main_lists_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/main_item_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e83743"
            android:textSize="13sp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/more"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#2e3c58"/>
</LinearLayout>

