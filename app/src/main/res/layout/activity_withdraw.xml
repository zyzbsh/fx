<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/TitleLayout">

        <TextView
            android:id="@id/title_back"
            style="@style/TiTleBackTv" />

        <TextView
            android:id="@id/title_content_tv"
            style="@style/TiTleContentTv"
            android:text="@string/withdraw" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        android:background="#fc6d5a">

        <TextView
            android:id="@+id/withdraw_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:text="@string/withdraw_can_num"/>

        <TextView
            android:id="@+id/withdraw_account_remind_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:text="@string/remind_withdraw_account"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:hint="@string/input_withdraw_account"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_white_corner_3"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

</LinearLayout>
