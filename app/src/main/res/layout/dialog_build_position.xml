<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_build_position">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="44dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_build_product_type_tv"
                    style="@style/BuildPositionDialogTv"
                    android:text="@string/product_type" />

                <TextView
                    android:id="@+id/dialog_build_buying_price_tv"
                    style="@style/BuildPositionDialogTv"
                    android:layout_marginTop="14dp"
                    android:text="@string/buying_price" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_build_buying_num_tv"
                    style="@style/BuildPositionDialogTv"
                    android:text="@string/buying_num" />

                <TextView
                    android:id="@+id/dialog_build_buying_price_1_tv"
                    style="@style/BuildPositionDialogTv"
                    android:layout_marginTop="14dp"
                    android:text="@string/buying_price" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="61dp"
            android:orientation="horizontal">

            <TextView
                style="@style/BuildPositionDialogTv"
                android:text="@string/stop_profit" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dialog_build_stop_profit_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dialog_buy_padding"
                android:paddingRight="@dimen/dialog_buy_padding" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="23.7dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_build_position"
            android:layout_marginRight="@dimen/dialog_build_position"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                style="@style/BuildPositionDialogTv"
                android:text="@string/stop_loss" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dialog_build_stop_loss_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dialog_buy_padding"
                android:paddingRight="@dimen/dialog_buy_padding" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_buy_padding"
            android:layout_marginRight="@dimen/dialog_buy_padding"
            android:layout_marginTop="34dp"
            android:gravity="center_horizontal"
            android:text="@string/remind_build_position"
            android:textColor="@color/gray_9"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="56.5dp"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="9.6dp"
            android:paddingRight="9.6dp">

            <TextView
                android:id="@+id/dialog_build_sure_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_sure"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dialog_build_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cancel"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
