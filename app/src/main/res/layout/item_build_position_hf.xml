<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <RelativeLayout
        android:id="@+id/item_dialog_build_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4.5dp"
        android:background="@mipmap/bg_build_position_item_default">

        <TextView
            android:id="@+id/item_dialog_build_fee_tv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="1dp"
            android:background="@mipmap/bg_build_position_item_tv"
            android:gravity="center"
            android:text="@string/fee_num"
            android:textColor="@color/white"
            android:textSize="13.6sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_dialog_build_fee_tv"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/build_position_hf_profit_percent_des_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f6812e"
                android:textSize="12sp"
                android:ems="2"
                android:layout_marginLeft="20dp"
                android:text="止盈比例"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/build_position_hf_profit_percent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#f6812e"
                android:textSize="13.6sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_build_position_hf_discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:padding="1dp"
        android:textStyle="bold"
        android:background="@mipmap/bg_discount"
        android:visibility="gone"/>

</RelativeLayout>
